{
  "name": "simple-rrule",
  "version": "0.0.0-development",
  "description": "simple rrule string parser and expand date events",
  "author": "Jonas Gedrat",
  "license": "MIT",
  "main": "dist/simple-rrule.umd.js",
  "module": "dist/simple-rrule.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/simple-rrule.es.js",
      "require": "./dist/simple-rrule.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jonasgedrat/simple-rrule.git"
  },
  "bugs": {
    "url": "https://github.com/jonasgedrat/simple-rrule.git/issues"
  },
  "homepage": "https://github.com/jonasgedrat/simple-rrule.git#readme",
  "scripts": {
    "start": "vite build --watch",
    "build": "tsup src/index.ts --dts --sourcemap --target es5",
    "commit": "git-cz",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "prepare": "vite build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release --branches main"
  },
  "peerDependencies": {
    "zod": ">=4"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@swc/core": "^1.13.5",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "semantic-release": "^23.0.0",
    "size-limit": "^11.2.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "7.1.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
